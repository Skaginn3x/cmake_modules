[Unit]
Description=@DESCRIPTION@
Requires=dbus.socket
After=dbus.socket

[Service]
ExecStart=@CMAKE_INSTALL_PREFIX@/@INSTALL_DIR@/@EXE_NAME@ --id %i
StandardOutput=journal
StandardError=journal
LimitNOFILE=8192
User=tfc
Restart=always
RestartSec=1s
RuntimeDirectory=tfc
RuntimeDirectoryPreserve=yes
ConfigurationDirectory=tfc
PrivateTmp=true
ProtectSystem=yes # Cannot be set to full or strict, requires acess to /etc/tfc to facilitate configuration changes

[Install]
WantedBy=multi-user.target
